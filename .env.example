NEXT_PUBLIC_POLYGON_CHAIN_ID=137
POLYGON_TESTNET_RPC_URL=https://rpc-mumbai.maticvigil.com

# =============================================================================
# SPORTS DATA & EXTERNAL APIS
# =============================================================================
# The Graph Protocol for decentralized sports data indexing
# Get from: https://thegraph.com/studio/
GRAPH_API_KEY=your-graph-protocol-api-key-here
NEXT_PUBLIC_GRAPH_ENDPOINT=https://gateway-arbitrum.network.thegraph.com/api/your-key-here

# Chainlink Sports Data Feeds (if available)
# Get from: https://docs.chain.link/data-feeds/
CHAINLINK_API_KEY=your-chainlink-api-key-here

# ESPN API (for commentary feed simulation - may require media partnership)
ESPN_API_KEY=your-espn-api-key-here

# Sports Illustrated API (alternative commentary source)
SI_API_KEY=your-sports-illustrated-api-key-here

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# NextAuth.js secret for session management
NEXTAUTH_SECRET=your-super-secret-nextauth-key-minimum-32-characters-long
NEXTAUTH_URL=http://localhost:3000

# JWT secrets for API authentication
JWT_SECRET=your-jwt-secret-for-api-authentication-here

# =============================================================================
# DEVELOPMENT & DEPLOYMENT
# =============================================================================
# Environment designation
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Vercel deployment variables (auto-populated on Vercel)
# VERCEL_URL=your-vercel-deployment-url.vercel.app
# VERCEL_GIT_COMMIT_SHA=auto-populated-by-vercel

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Vercel Analytics (optional for hackathon)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id-here

# PostHog for user analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-project-key-here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# HACKATHON DEMO CONFIGURATION
# =============================================================================
# Enable demo mode with pre-loaded data
NEXT_PUBLIC_DEMO_MODE=true

# Pre-configured demo athlete for consistent presentations
DEMO_ATHLETE_ID=demo-athlete-sarah-johnson-uuid
DEMO_ATHLETE_NAME="Sarah Johnson"
DEMO_ATHLETE_SPORT="Basketball"
DEMO_ATHLETE_UNIVERSITY="State University"

# Mock payment amounts for demo (in USD)
DEMO_PAYMENT_AMOUNT_SMALL=5.00
DEMO_PAYMENT_AMOUNT_MEDIUM=25.00
DEMO_PAYMENT_AMOUNT_LARGE=100.00

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================
# OpenAI rate limiting
OPENAI_MAX_REQUESTS_PER_MINUTE=60

# Supabase connection pooling
SUPABASE_POOL_MAX=20

# =============================================================================
# FEATURE FLAGS FOR HACKATHON
# =============================================================================
# Enable/disable features during development
NEXT_PUBLIC_ENABLE_REAL_PAYMENTS=false
NEXT_PUBLIC_ENABLE_LIVE_COMMENTARY=false
NEXT_PUBLIC_ENABLE_NFT_MINTING=true
NEXT_PUBLIC_ENABLE_CROSS_CHAIN_BRIDGING=true
NEXT_PUBLIC_ENABLE_TAP_TO_PAY_SIMULATION=true

# =============================================================================
# LOGGING & DEBUG
# =============================================================================
# Enable debug logging during development
DEBUG=fanfuel:*
LOG_LEVEL=debug

# Disable telemetry for faster builds
NEXT_TELEMETRY_DISABLED=1

