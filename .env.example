# FanFuel Environment Variables Template
##################################################################

#NEXT and Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

#Gemini
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

#Reddit
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

#Coinbase
COINBASE_CDP_API_KEY=your_cdp_api_key_here
COINBASE_CDP_API_SECRET=your_cdp_api_secret_here
NEXT_PUBLIC_COINBASE_PROJECT_ID=your_coinbase_project_id_here

#Circle
CIRCLE_API_KEY=your_circle_api_key_here
CIRCLE_ENVIRONMENT=sandbox

#LayerZero
LAYERZERO_ENDPOINT_ETHEREUM=your_lz_eth_endpoint_here
LAYERZERO_ENDPOINT_POLYGON=your_lz_polygon_endpoint_here
LAYERZERO_ENDPOINT_BASE=your_lz_base_endpoint_here

#Chiliz
CHILIZ_RPC_URL=https://rpc.chiliz.com
CHILIZ_CHAIN_ID=88888

#Pinata
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_key_here

#Twitter
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Ethereum Testnet (Sepolia)
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your_infura_key
NEXT_PUBLIC_ETHEREUM_CHAIN_ID=11155111

# Polygon Testnet (Mumbai)
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mumbai.infura.io/v3/your_infura_key
NEXT_PUBLIC_POLYGON_CHAIN_ID=80001

# Base Testnet (Coinbase L2)
NEXT_PUBLIC_BASE_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_BASE_CHAIN_ID=84532

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Enable/disable features during development
NEXT_PUBLIC_ENABLE_WEB3=true
NEXT_PUBLIC_ENABLE_AI_ANALYSIS=true
NEXT_PUBLIC_DEMO_MODE=false

# Logging and monitoring (optional)
NEXT_PUBLIC_VERCEL_URL=your_deployed_url_here
SENTRY_DSN=your_sentry_dsn_here

# Demo data settings
NEXT_PUBLIC_USE_MOCK_DATA=false
NEXT_PUBLIC_DEMO_ATHLETE_COUNT=10
NEXT_PUBLIC_DEMO_COMMENTARY_COUNT=25

# Performance settings for judges
NEXT_PUBLIC_GEMINI_TIMEOUT=3000
NEXT_PUBLIC_WALLET_CREATION_TIMEOUT=30000
NEXT_PUBLIC_NFT_MINT_TIMEOUT=60000

# Fallback configuration
NEXT_PUBLIC_ENABLE_FALLBACKS=true
NEXT_PUBLIC_FALLBACK_MODE=graceful